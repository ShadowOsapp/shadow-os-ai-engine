# ShadowOS AI Engine Configuration
# Copy this file to .env and fill in your values

# ============================================
# AI Engine Core Settings
# ============================================
AI_ENGINE_ENABLED=true
AI_MODEL_PATH=./models/privacy-ml
AI_LEARNING_RATE=0.001
AI_BATCH_SIZE=32
AI_EPOCHS=100

# ============================================
# AI API Tokens (Optional)
# ============================================
# For external AI services integration
# Leave empty if using local models only

# OpenAI API (for advanced ML features)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Anthropic Claude API (for privacy-preserving AI)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# Google AI (Gemini) - Optional
GOOGLE_AI_API_KEY=your_google_ai_key_here

# Hugging Face (for ML models)
HUGGINGFACE_API_KEY=hf_your_huggingface_token_here

# ============================================
# ShadowOS Integration
# ============================================
SHADOWOS_CORE_URL=http://localhost:3000
X402_ENDPOINT=http://localhost:3001
REPUTATION_ENGINE_URL=http://localhost:3002

# ============================================
# Privacy & Security Settings
# ============================================
PRIVACY_ADAPTATION_ENABLED=true
MIN_PRIVACY_LEVEL=medium
MAX_PRIVACY_LEVEL=maximum
PRIVACY_THRESHOLD=0.8

# Fraud Detection
FRAUD_DETECTION_ENABLED=true
FRAUD_THRESHOLD=0.7
ANOMALY_DETECTION_SENSITIVITY=0.5

# ============================================
# Payment Routing AI
# ============================================
PAYMENT_ROUTING_ENABLED=true
ROUTING_OPTIMIZATION_MODE=balanced
# Options: speed, cost, privacy, balanced

# Gas Price Prediction
GAS_PREDICTION_ENABLED=true
GAS_PREDICTION_WINDOW=300
# Time window in seconds for gas prediction

# ============================================
# ML Model Configuration
# ============================================
ML_MODEL_TYPE=neural_network
# Options: neural_network, random_forest, gradient_boosting

ML_MODEL_PATH=./models/privacy-ml/model.json
ML_MODEL_CHECKPOINT=./models/privacy-ml/checkpoints

# Training Configuration
TRAINING_ENABLED=false
TRAINING_DATA_PATH=./data/training
TRAINING_VALIDATION_SPLIT=0.2

# ============================================
# Reputation Learning
# ============================================
REPUTATION_LEARNING_ENABLED=true
REPUTATION_UPDATE_INTERVAL=3600
# Update interval in seconds

REPUTATION_FEATURES=payment_count,payment_amount,verification_count,compliance_score
REPUTATION_WEIGHTS=0.3,0.2,0.3,0.2

# ============================================
# Logging & Monitoring
# ============================================
LOG_LEVEL=info
# Options: debug, info, warn, error

ENABLE_METRICS=true
METRICS_PORT=9090

# ============================================
# Development Settings
# ============================================
NODE_ENV=development
DEBUG=false

# ============================================
# Network Configuration
# ============================================
SUPPORTED_CHAINS=ethereum,polygon,bsc,solana,arbitrum,optimism,avalanche
DEFAULT_CHAIN=ethereum

# Chain RPC Endpoints (Optional - for gas estimation)
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_KEY
BSC_RPC_URL=https://bsc-dataseed.binance.org/

